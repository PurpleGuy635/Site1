<!doctype html>
<html lang="fr">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1"> {% block stylesheets %}
    <!-- Bootstrap CSS -->
    <link href="https://bootswatch.com/5/lumen/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"> {% endblock %}
    <title>{% block title %}Arras - {% endblock %}</title>
</head>

<body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{path('index')}}">Arras</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{path('index')}}">Accueil
                        <span class="visually-hidden">(current)</span>
                        </a>
                    </li>

                    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a class="nav-link text-white" href="{{path('app_login')}}">connecter vous pour déposer un avis</a>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('avis')}}">déposer un avis</a>
                    </li>
                    {% endif %}
                    
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('contact')}}">Contact</a>
                    </li>
                    
                    
                    
                    {% if is_granted('ROLE_MOD')%}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Service</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{path('demandecarte')}}">Demande de carte d'identité</a>
                            <a class="dropdown-item" href="{{path('demanderepas')}}">réservation de repas à l'école</a>
                        </div>
                    </li>
                    {% endif %}

                    {% if is_granted('ROLE_ADMIN')%}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                          Administration
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                            <li><a class="dropdown-item" href="{{path('liste-contacts')}}">Liste des contacts</a></li>
                            <li><a class="dropdown-item" href="{{path('liste_user')}}">Liste des utilisateurs</a></li>
                        </ul>
                    </li>
                    {% endif %}
                    
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Retrouvez-nous</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="https://fr-fr.facebook.com/VilleArras">Facebook</a>
                            <a class="dropdown-item" href="https://instagram.com/VilleArras">Instagram</a>
                            <a class="dropdown-item" href="https://twitter.com/villearras">Twitter</a>
                            <a class="dropdown-item" href="https://www.youtube.com/user/VilleArras">Youtube</a>
                        </div>
                    </li>

                    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item"><a class="nav-link text-white" href="{{path('app_login')}}">Se connecter</a></li>

                    <li class="nav-item"><a class="nav-link text-white" href="{{path('app_register')}}">S'inscrire</a></li>

                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{path('app_logout')}}">{{app.user.email}}
                            <i class="bi bi-x-circle-fill text-white"></i>
                        </a>
                    </li>
                    {% endif %}

                </ul>
            </div>
        </div>
    </nav>




    {% for message in app.flashes('notice') %}
    <h2 class="alert alert-warning text-center mt-4 mb-4" role="alert">
        {{ message }}
    </h2>
    {% endfor %} {% block body %}{% endblock %}


    <br>
    <br>
    <footer style="background:#FFFFFF; position:relative; bottom:0; width:100%; padding-top:auto; height:50px;">
        © 2022 SIO LGM Arras
    </footer>

    {% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    {% endblock %}
</body>

</html>